{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"packageRules": [
		{
			"matchUpdateTypes": ["patch", "pin", "digest"],
			"automerge": true,
			"automergeType": "branch"
		},
		{
			"matchUpdateTypes": ["minor"],
			"matchDepTypes": ["devDependencies"],
			"automerge": true
		}
	]
}
